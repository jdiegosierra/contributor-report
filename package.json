{
  "name": "contributor-report",
  "description": "GitHub Action that evaluates contributor quality to combat AI-generated spam PRs",
  "version": "1.0.0",
  "author": "Diego Sierra",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/jdiegosierra/contributor-report",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdiegosierra/contributor-report.git"
  },
  "bugs": {
    "url": "https://github.com/jdiegosierra/contributor-report/issues"
  },
  "keywords": [
    "actions",
    "github",
    "contributor",
    "quality",
    "spam-detection",
    "open-source"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 pnpm exec jest",
    "coverage": "pnpm exec make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "pnpm exec prettier --write .",
    "format:check": "pnpm exec prettier --check .",
    "lint": "pnpm exec eslint .",
    "lint:md": "pnpm exec markdownlint '**/*.md' --ignore node_modules",
    "lint:all": "pnpm run lint && pnpm run lint:md && pnpm run format:check",
    "local-action": "pnpm exec local-action . src/main.ts .env",
    "package": "pnpm exec rimraf ./dist && pnpm exec rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "pnpm run package -- --watch",
    "test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 pnpm exec jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^7.0.0",
    "@jest/globals": "^30.2.0",
    "@octokit/types": "^16.0.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.8.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "make-coverage-badge": "^1.2.0",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.4",
    "prettier-eslint": "^16.4.2",
    "rimraf": "^6.0.0",
    "rollup": "^4.57.1",
    "ts-jest": "^29.4.6",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
